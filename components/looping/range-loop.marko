<!-- Loop from 0 to 10 -->
<ul>
  <for|i| from=0 to=10>
    <li>${i}</li>
  </for>
</ul>

<!-- Loop from 0 to 10 but have a step of 2 -->
<ul>
  <for|i| from=0 to=10 step=2>
    <li>${i}</li>
  </for>
</ul>

<!-- Loop from 0 to the end of the array (you should just use "<for|...| of=...>" here) -->
$ const myArray = [1, 2, 3, 4, 5];
<ul>
  <for|i| from=0 to=(myArray.length - 1)>
    <li>${myArray[i]}</li>
  </for>
</ul>
